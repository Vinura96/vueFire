
@{
    ViewData["Title"] = "OverchargeTest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .grey {
        background-color:lightgray
    }
    .bracket {
        border-top: 20px;
        border-bottom: 20px;
        border-right: none;
        border-left: 5px solid black;
    }
        .bracket:after {
            content: ']'
        }

        .bracket:before {
            content: '['
        }
</style>

<body class="grey">
    <div style="font-size:36px;font-weight: bold;text-align:center;margin-bottom:50px">Over Charge Test</div>
    <span style="font-size:22px;font-weight: bold;margin-bottom:15px">Please Follow The Below Steps</span>
    <div style="font-size:20px;font-weight: bold;margin-bottom:25px">
        <ol>
            <li>Discharge the battray at 20C plus or mines 5C at aconstant current of 0.2I A to a specific final voltage</li>
            <li>Charge the battary with the recommened chage current( Irec) specfic by the manufacture</li>
        </ol>
    </div>
    <div class="bracket" style="font-size:26px;font-weight: bold;text-align:center;margin-bottom:50px;color:blue">
        The Duration of the test time (in hours)=2.5C/Irec
    </div>
    <div style="font-size:18px;font-weight: bold;text-align:left;margin-bottom:10px;"> Observations</div>
    <div style="font-size:16px;font-weight: bold;text-align:left;margin-bottom:50px;">
        <div>
            <span> ANY APPROCIMATION</span>
            <label class="radio-inline">
                <input type="radio" name="A1">YES
            </label>
            <label class="radio-inline">
                <input type="radio" name="A1">NO
            </label>
        </div>
        <div>
            <span> ANY FIRE</span>
            <label class="radio-inline">
                <input type="radio" name="F1">YES
            </label>
            <label class="radio-inline">
                <input type="radio" name="F1">NO
            </label>
        </div>
    </div>

    <ul style="font-size:18px;font-weight: bold;margin-bottom:25px">
        <li>State note E if all the Observations were</li>
        <span>
            <label class="radio-inline">
                <input type="radio" name="last1">NO
            </label>
            <label class="radio-inline">
                <input type="radio" name="last1">YES
            </label>
        </span>
        <li>State node F if one of 2 observation were</li>
        <span>
            <label class="radio-inline">
                <input type="radio" name="last2">NO
            </label>
            <label class="radio-inline">
                <input type="radio" name="last2">YES
            </label>
        </span>'
    </ul>
</body>